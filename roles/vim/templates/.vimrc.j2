" plugin manager for vim
execute pathogen#infect()
execute pathogen#helptags()

filetype plugin on
syntax enable

let mapleader=","

" Color scheme (terminal)
set t_Co=256
set background=light
let g:solarized_termcolors=256
let g:solarized_termtrans=1
colorscheme solarized

" updates the terminal title with Vim details of current file
set title

" show line numbers
set number
" do not wrap long lines
set nowrap
" Maximum width of text that is being inserted.  A longer line will be
" broken after white space to get this width.  A zero value disables
set textwidth=100

" converts tabs into spaces
set expandtab
" number of spaces for a tab (when file reading)
set tabstop=4
" number of spaces for a tab (when file editing)
set softtabstop=4
set shiftwidth=4

" Visualize tabs and newlines
set listchars=tab:▸\ ,eol:¬

" highlight current line
set cursorline
" content starts scrolling earlier 
set scrolloff=10
" enable statusline
set laststatus=2

" useful for match brackets
set showmatch
" displaying current command and mode
set showcmd
set showmode

" highlight text after search has been done
set hlsearch
" search the characters that a typed for searching
set incsearch
" case insensitviesearch
set ignorecase

" Allow backspacing over autoindent, line breaks and start of insert action
set backspace=indent,eol,start

" Copy indent from current line when starting a new line
set cindent
set autoindent

" Enable use of the mouse for all modes
set mouse=a

" Use <F11> to toggle between 'paste' and 'nopaste'
set pastetoggle=<F11>

" Rendering
set ttyfast

" Some mappings

" Show (git) blame
map <Leader>bl :VCSBlame<cr>
" Navigate to next buffer
map <F6> :bn<cr>
" Navigate to previous buffer
map <S-F6> :bp<cr>
" Toogle sho/hide of special characters
map <F4> :set list!<cr>
" Show/hide taglist
map <F9> :TlistToggle<cr>

" visual indentation with tab and shift tab
vmap <TAB>     >gV
vmap <S-TAB>   <gV

nnoremap <buffer> <CR> <C-]>
" returns to previous page with "backspace"
nnoremap <buffer> <BS> <C-T>

" Automaticall change to folder of current file
autocmd BufEnter * silent! lcd %:p:h

" Plugin specific options
let g:notes_directories = ['~/.vim/documents/notes']

let g:indent_guides_enable_on_vim_startup = 1
let g:indent_guides_auto_colors = 1
let g:indent_guides_guide_size = 1

let wiki = {}
let wiki.path = '{{ vim_wiki_path }}'
let wiki.nested_syntaxes = {'python': 'python', 'c++': 'cpp'}
let g:vimwiki_list = [wiki]

